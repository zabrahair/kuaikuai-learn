.component-container {
  position: fixed;
  z-index: 99;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  left: 0vw;
  top: 0vh;

  width: 100vw;
  height: 100vh;
  background-color: rgba(200, 200, 200, 0.4);
}

.close_line {
  width: 1px;
  height: 7%;
  background-color: lavender;
}

.close_button {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 10vw;
  height: 10vw;
}