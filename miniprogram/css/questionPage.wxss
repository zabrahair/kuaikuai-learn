/** 拼写卡 */
.alphabet_cards {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 100%;
  margin-bottom: 5vh;
}

.alphabet_card {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 13.5vw;
  height: 24vw;
  margin: 1vw;

  border-radius: 3vw;
  font-size: 10vw;
  color: white;
  font-weight: 200;
  background: linear-gradient(-70deg, rgba(230, 211, 48, 0.9),
   30%, rgba(245, 72, 3, 0.9));
  box-shadow: 2px 2px 1px 1px rgba(0, 0, 255, .2);
}

.card-back-icon {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: center;
  justify-self: center;

  width: 50%;
  height: 35%;
}

@keyframes toFront {

  /** 第二种写法**//*开始转的角度*/
  from {
    /* background-color: orange; */
    transform: rotateY(180deg);
    color: rgba(255, 255, 255, 0);
  }/*结束的角度*/

  to {
    /* background-color: red; */
    color: rgba(255, 255, 255, 1);
    transform: rotateY(0deg);
  }
}

.card_unused {
  animation-name: toFront;
  animation-duration: 0.3s;
  animation-timing-function: ease-out;
  animation-iteration-count: 1;
  transform: rotateY(0deg);

  color: rgba(255, 255, 255, 1);
}

@keyframes toBack {

  /** 第二种写法**//*开始转的角度*/
  from {
    transform: rotateY(0deg);
  }/*结束的角度*/

  to {
    transform: rotateY(180deg);
  }
}
.card_used {
  animation-name: toBack;
  animation-duration: 0.3s;
  animation-timing-function: ease-out;
  animation-iteration-count: 1;
  color: rgba(255, 255, 255, 0);
  transform: rotateY(180deg);

}

