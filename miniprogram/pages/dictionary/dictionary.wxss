@import '../../css/common.wxss';
@import '../../css/tagsRoom.wxss';
.tables-container {
  height: 10vh;
}

.filters {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  right: 56vw;
  bottom: 0vh;
  width: 38vw;
  height: 6vh;
  font-size: 4vw;
  color: rgb(248, 248, 248);
  background-color: rgba(240, 22, 15, 0.9);
  border-top-left-radius: 2vw;

  box-shadow: 0px -1px 2px 1px rgb(97, 96, 96);
}

.filters_icon {
  width: 6vw;
  height: 6vw;
}

.filter_date {
  margin-left: 2vw;
}

.filter_time {
  margin-left: 2vw;
  margin-right: 3vw;
}

.keyword_search {
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center; 
  justify-self: flex-end;
  align-self: flex; 

  font-size: 4vw;
  right: 0vw;
  bottom: 0vh;
  height: 10vh;
  width: 45vw;
  border-radius: 0px;
  background-color: rgba(6, 146, 1, 0.9);
  box-shadow: 0px -1px 2px 1px rgb(97, 96, 96);
}


.input_keyword {
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;  

  width: 100%;
  height: 100%;
  padding-left: 1vw;
  color: white;

}

.input_keyword_ph {
  color:rgba(200, 206, 201, 0.9)
}

.tags-container {
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 90vh;

  background-color: rgba(114, 183, 185, 0.5);
}

.scroll-content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  justify-self: center;
  align-self: center;
  box-sizing: content-box;

  width: 100%;
  min-height: 100%;
  padding: 3%;
  color: black;
  font-size: 6vw;
  font-weight: 300;
}

