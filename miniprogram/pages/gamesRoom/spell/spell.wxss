@import '../../../css/questionPage.wxss';

.meaning_text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  width: 86.5%;
  height: 12vw;
  margin-left: 5%;

  font-size: 5vw;
  color: rgb(255, 255, 255);
  text-shadow: 2px 2px rgba(42, 63, 44, 0.5);
  font-weight: 400;
  /* border: 1px solid black; */
}

.spell_positions {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 80vw;
}

.spell_letter_position {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin: 1px;
  font-size: 12vw;
  color: crimson;
  font-weight: 200; 
}

.left_questions_count {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  left: 86.5%;
  top: 0vh;
  width: 10vw;
  height: 10vw;

  border-top-right-radius: 3vw;
  border-bottom-left-radius: 3vw;
  font-size: 7vw;
  padding: 1vw;
  color: rgb(236, 236, 236);
  font-weight: 100;
  background-color: rgba(113, 0, 243, 0.9);
}

.answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
  height: 15vh;
  margin-top: 3vh;
  border-radius: 3vw;
  padding: 3vw;

  background-color: rgba(100, 100, 100, 0.90);
}