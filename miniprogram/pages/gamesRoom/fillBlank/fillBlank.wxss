.container {
  position: relative;
  align-items: center;
  width: 100vw;
  /* height: 150vh; */
}

.header {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 100vw;
  height: 7vh;
  background-color: rgba(100, 100, 100, 0.5);
  /* padding-left: 5vw;
  padding-right: 5vw; */
}

.current_score{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 25vw;
  height: 7vh;

}

.current_score .caption{
  font-size: 3vw;
  color: white;
}

.current_score .value{
  font-size: 3vw;
  color: white;
}

.total_score {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 25vw;
  height: 7vh;

}

.total_score .caption{
  font-size: 3vw;
  color: white;
}

.total_score .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center; 

  font-size: 3vw;
  color: white;
}

.current_timer {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 50vw;
  height: 7vh;
}

.current_timer .caption{
  font-size: 3vw;
  color: white;
}

.current_timer .value{
  font-size: 4vw;
  color: greenyellow;
  width: 100%;
}

.caption {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;  

  width: 15vw;
  height: 7vh;

}

.value {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;  

  width: 20vw;
  height: 7vh;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
  /* height: 140vh; */

}

.filters {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 95vw;
  height: 4vw;
  font-size: 4vw;
  margin-top:4vw;
}

.filters_icon {
  width: 6vw;
  height: 6vw;
}

.filter_date {
  margin-left: 2vw;
}

.filter_time {
  margin-left: 2vw;
  margin-right: 3vw;
}

.question {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 90vw;
  height: 40vh;
  margin-top: 1vh;
  border-radius: 3vw;
  /* padding: 3vw; */
  font-size: 14vw;
  color: green;
  font-weight: 800;
  background: linear-gradient(50deg, rgba(17, 144, 202, 0.9),
   70%, rgba(11, 245, 3, 0.9));
  box-shadow: 0px 0px 5px 4px rgba(110, 110, 167, 0.4);
}

.play-sound {
  position: absolute;

  width: 10vw;
  height: 10vw;
}

.favorite {
  position: absolute;
  align-self: flex-start;

  left: 2%;
  top: 2%;
  width: 7vw;
  height: 7vw;
}

.ques_wait_time {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  right: 0%;
  top: 0vh;
  /* width: 10vw; */
  height: 5vw;

  border-top-right-radius: 3vw;
  border-bottom-left-radius: 1.5vw;
  font-size: 4vw;
  padding: 1vw;
  color: rgb(236, 236, 236);
  font-weight: 100;
  background-color: rgba(196, 58, 16, 0.9);
}

.question_text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: center;

  width: 80.5%;
  /* height: 12vw; */
  min-height: 25vh;
  padding: 3%;

  font-size: 5vw;
  color: white;
  font-weight: 300;  
  border-radius: 2vw;
  background: linear-gradient(50deg, rgba(156, 184, 197, 0.5),
   70%, rgba(240, 241, 240, 0.9));
  /* box-shadow: 0px 0px 5px 4px rgba(238, 238, 243, 0.4); */
}

.answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
  height: 15vh;
  margin-top: 3vh;
  border-radius: 3vw;
  padding: 3vw;

  background-color: rgba(100, 100, 100, 0.90);
}

.input_answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 80vw;
  height: 13vh;
  padding-left: 5vw;
  font-size: 10vw;
  font-weight: 900;
  color: white;
  /* border: 1px solid black; */
}

.input_answer_ph {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 80vw;
  height: 13vh;
  font-size: 10vw;
  font-weight: 100;
  color: darkgrey;
}

.answer_form{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
}

.bottom_content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  margin-top: 2vh;
  margin-bottom: 2vh;
  width: 85vw;
  /* height: 70vh; */
}



.current_question_index {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  left: 0%;
  bottom: 0%;
  /* width: 10vw; */
  height: 5vw;

  border-top-right-radius: 3vw;
  border-bottom-left-radius: 1vw;
  font-size: 4vw;
  padding: 1.5vw;
  color: rgb(236, 236, 236);
  font-weight: 100;
  background-color: rgba(113, 0, 243, 0.9);  
}

.current_tags {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  right: 0%;
  bottom: 0%;
  /* width: 10vw; */
  height: 4vw;

  border-top-left-radius: 1.5vw;
  border-bottom-right-radius: 3vw;
  font-size: 3vw;
  padding: 1vw;
  color: rgb(236, 236, 236);
  font-weight: 100;
  background-color: rgba(40, 129, 37, 0.9);    
}

.sperator_title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  height: 6vw;

  margin-top: 1vh;
  font-size: 5vw;
  text-shadow: 1vw 1vw 3vw 1vw rgba(8, 29, 15, 1);
  color: rgb(10, 133, 81);
  font-weight: 400;
  /* background-color: rgba(40, 129, 37, 0.9);     */
}



.buttons {
  /* position: absolute;
  z-index: 99; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;

  width: 90vw;
  height: 15vh;
  margin-top: 1vh;
  border-radius: 3vw;
  padding: 0vw;

  background-color: rgba(255, 200, 200, 0.6);
}

.buttons button {
  margin-left: 2vw;
  margin-right: 2vw;

}

.btn_answer {
  width: 20vw;
  height: 17vw;

  -webkit-filter: drop-shadow(2px 2px 2px #222);
  filter: drop-shadow(2px 2px 2px #222);
}

.btn_reset {
  width: 10vw;
  height: 10vw;
  border-radius: 5vw;
}

.btn_pause {
  width: 10vw;
  height: 10vw;
  border-radius: 5vw;
}

.btn_previous_question {
  width: 10vw;
  height: 10vw;
  border-radius: 5vw;
}

.btn_next_question {

  border-radius: 5vw;
  width: 10vw;
  height: 10vw;
}

.check-answer {
  width: 15vw;
  height: 15vw;

  font-size: 5vw;
  border-radius: 8vw;
  box-shadow: 2px 2px 1px 1px rgba(110, 110, 167, 0.4);

}

.right {
  /* color: green; */
  /* background-color: rgba(161, 248, 212, 0.6); */
}

.wrong {
  /* color: red; */
  /* background-color: rgba(239, 245, 151, 0.6); */
}

.btn_continue {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  z-index: 99;
  left: 25vw;
  top: 25vh;
  font-size: 10vh;

  box-shadow: 2px 2px 1px 1px rgba(110, 110, 167, 0.4);  
}

.true {
  display: flex;
}

.false {
  display: none;
}

.all_words_container {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 79vw;
  height: 79vh;
  margin-top: 1vh;
  padding: 2vw;
  border-radius: 3vw;
  background-color: rgba(200, 200, 255, 0.9);
}

.all_words {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  margin-top: 1vh;
  border-radius: 3vw;
  background-color: rgba(200, 200, 255, 0.9);
}

.word_card {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin: 1vw;
  color: white;
  font-size: 3vw;
  padding: 1vw;
  border-radius: 2vw;
  background-color: rgba(17, 92, 153, 0.9);
}

.left_card {
  background-color: rgba(17, 92, 153, 0.9);
}

.current_card {
  background-color: rgba(255, 0, 76, 0.9);
  /* text-shadow: 1px 1px 1px gray; */
  box-shadow: 2px 2px 1px 1px rgba(0, 0, 255, .2);
}

.wrong_card {
  background-color: rgba(126, 6, 6, 0.9);
  /* text-shadow: 1px 1px 1px gray; */
  box-shadow: 2px 2px 1px 1px rgba(0, 0, 255, .2);
}

.count_point {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 4vw;
  height: 4vw;

  color: white;
  font-size: 2vw;
  border-radius: 2vw;
  background-color: rgba(0, 0, 0, 1);

  right: -10%;
  top: -30%;
}

.correct {

  background-color: rgb(6, 138, 247);
}

.incorrect {

  background-color: rgb(247, 6, 6);
}

.done_card {
  background-color: rgba(43, 167, 12, 0.9);
}