@import '../../../css/questionPage.wxss';

.question {
  justify-content: center;
  align-items: center;
}

.question_text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: center;

  width: 80.5%;
  /* height: 12vw; */
  min-height: 25vh;
  padding: 3%;

  font-size: 5vw;
  color: white;
  font-weight: 300;  
  border-radius: 2vw;
  background: linear-gradient(50deg, rgba(156, 184, 197, 0.5),
   70%, rgba(240, 241, 240, 0.9));
  /* box-shadow: 0px 0px 5px 4px rgba(238, 238, 243, 0.4); */
}

.answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
  height: 15vh;
  margin-top: 1vh;
  border-radius: 3vw;
  padding: 3vw;

  background-color: rgba(100, 100, 100, 0.90);
}

.answer_form{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
}

.input_answer {
  height: 20vw;
  color: whitesmoke;
  font-size: 10vw;
  margin: 10px;
}

.input_answer_ph{
  color: darkgrey;
  text-shadow:    1px 2px 3px rgba(100, 100, 100, 0.90);    
  font-size: 6vw;
}

.sperator_title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  height: 6vw;

  margin-top: 1vh;
  font-size: 5vw;
  text-shadow: 1vw 1vw 3vw 1vw rgba(8, 29, 15, 1);
  color: rgb(10, 133, 81);
  font-weight: 400;
  /* background-color: rgba(40, 129, 37, 0.9);     */
}