@import '../../../css/questionPage.wxss';
.question {
  justify-content: center;
  align-items: center;
}

.question_text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-self: center;

  width: 80.5%;
  /* height: 12vw; */
  min-height: 25vh;
  padding: 3%;

  font-size: 5vw;
  color: white;
  font-weight: 300;  
  border-radius: 2vw;
  background: linear-gradient(50deg, rgba(156, 184, 197, 0.5),
   70%, rgba(240, 241, 240, 0.9));
  /* box-shadow: 0px 0px 5px 4px rgba(238, 238, 243, 0.4); */
}

.option_tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 85vw;
  margin-bottom: 1vh;
  padding-top: 1vh;
  /* height: 30vh; */
}

.option_tag {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  min-height: 8vw;
  margin: 0.7vh;
  padding-left: 3vw;
  border-radius: 2vw;
  font-size: 5vw;
  color: white;
  font-weight: 200;
  /* background: linear-gradient(50deg, rgba(17, 144, 202, 0.9),
   70%, rgba(11, 245, 3, 0.9)); */
  background: linear-gradient(-70deg, rgba(230, 211, 48, 0.9),
   30%, rgba(245, 72, 3, 0.9));
  box-shadow: 2px 2px 1px 1px rgba(0, 0, 255, .2);
}

.selected {
  background: linear-gradient(-70deg, rgba(9, 131, 231, 0.89),
   50%, rgba(4, 231, 4, 0.9));
  box-shadow: 1px 4px 4px 2px rgba(22, 22, 44, 0.5);
}

.option_select_icon {
  display: none;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center; 
  width: 6vw;
  height: 6vw;
  margin-left: 0vw;
  margin-right: 1vw;
}

image.selected {
  display: flex;
  background: linear-gradient(-70deg, rgba(9, 131, 231, 0),
   50%, rgba(4, 231, 4, 0.9));
  box-shadow: 1px 1px 4px 4px rgba(22, 22, 44, 0);
}

.sperator_title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  height: 6vw;

  margin-top: 1vh;
  font-size: 5vw;
  text-shadow: 1vw 1vw 3vw 1vw rgba(8, 29, 15, 1);
  color: rgb(10, 133, 81);
  font-weight: 400;
  /* background-color: rgba(40, 129, 37, 0.9);     */
}
