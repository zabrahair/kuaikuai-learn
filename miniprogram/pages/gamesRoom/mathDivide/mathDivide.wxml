<!--miniprogram/pages/index/index.wxml-->
<view class='container'>
  <view class='header'>
    <view class='current_score'>
      <view class='caption'>
        本次: 
      </view>
      <view class='value'>
        {{curScore}}
      </view>
    </view>
    <view class='current_timer'>
      <!-- <view class='caption'>
      </view> -->
      <view class='value'>
        {{curDeciTimerStr}}
      </view>
    </view>
    <view class='total_score'>
      <view class='value'>
        {{totalScore}}
      </view> 
      <view class='caption'>
        :总分
      </view>   
    </view>
  </view>
  <view class='content'>
    <view class='question' animation="{{fadeInOutQuestion}}">
        {{curQuestion.op1}}
        {{curQuestion.operator}}
        {{curQuestion.op2}}
        {{curQuestion.then}}
    </view>
    <form class="answer_form"  bindsubmit="submitAnswer" bindreset="resetAnswer">
      <view class='buttons' animation="{{fadeInOutQuestion}}">
        <button class="btn_reset"  formType="reset" type="warn" size='mini'>重置</button>
        <button class="btn_answer" formType="submit" type="primary" size='mini'>提交</button>
        <button class="btn_next_question" bindtap='onClickNextQuestion' type="warn" size='mini'>下一题</button>
        <button class="btn_pause" bindtap='onClickPause' type="warn" size='mini'>{{pauseBtnText}}</button>
      </view>    
      <view class='answer' animation="{{fadeInOutQuestion}}">
        <input name='answer' class='input_answer' placeholder="输入答案" placeholder-class="input_answer_ph" bindinput='onInputAnswer' type="{{answerType}}" disabled='{{inputAnswerDisabled}}' value="{{curAnswer}}"/>
      </view>
    </form>
  </view>
  <button class="btn_continue" bindtap='onClickPause' type="primary" size='default' animation="{{fadeInOutPauseBtn}}">{{pauseBtnText}}</button>
</view>
