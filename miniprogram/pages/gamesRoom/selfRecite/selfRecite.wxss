@import '../../../css/questionPage.wxss';
.meaning_text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  width: 86.5%;
  height: 12vw;
  margin-left: 5%;

  font-size: 5vw;
  color: rgb(255, 255, 255);
  text-shadow: 2px 2px rgba(96, 96, 96, 0.5);
  font-weight: 400;
  /* border: 1px solid black; */
}

.spell_positions {
  /* position: absolute;
  top: 20vh; */

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
}

.spell_letter_position {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin: 2vw;
  font-size: 12vw;
  color: crimson;
  font-weight: 200;
   
}

.answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
  height: 15vh;
  margin-top: 3vh;
  border-radius: 3vw;
  padding: 3vw;

  background-color: rgba(100, 100, 100, 0.90);
}

