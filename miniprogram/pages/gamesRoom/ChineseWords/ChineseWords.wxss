

.header {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 100vw;
  height: 7vh;
  background-color: rgba(100, 100, 100, 0.5);
  padding-left: 5vw;
  padding-right: 5vw;
}

.current_score{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 25vw;
  height: 7vh;

}

.current_score .caption{
  font-size: 3vw;
  color: white;
}

.current_score .value{
  font-size: 3vw;
  color: white;
}

.total_score {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 25vw;
  height: 7vh;

}

.total_score .caption{
  font-size: 3vw;
  color: white;
}

.total_score .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center; 

  font-size: 3vw;
  color: white;
}

.current_timer {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 50vw;
  height: 7vh;
}

.current_timer .caption{
  font-size: 3vw;
  color: white;
}

.current_timer .value{
  font-size: 4vw;
  color: greenyellow;
  width: 100%;
}

.caption {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;  

  width: 15vw;
  height: 7vh;

}

.value {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;  

  width: 20vw;
  height: 7vh;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 90vh;

}

.filters {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 95vw;
  height: 4vw;
  font-size: 4vw;
  margin-top:4vw;
}

.filters_icon {
  width: 6vw;
  height: 6vw;
}

.filter_date {
  margin-left: 2vw;
}

.filter_time {
  margin-left: 2vw;
  margin-right: 3vw;
}

.question {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;

  width: 90vw;
  height: 40vh;
  margin-top: 1vh;
  border-radius: 3vw;
  /* padding: 3vw; */
  font-size: 14vw;
  color: green;
  font-weight: 800;
  background-color: rgba(200, 200, 255, 0.9);
}

.favorite {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  left: 5%;
  top: 2%;
  width: 10vw;
  height: 10vw;
}

.meaning_text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  width: 86.5%;
  height: 12vw;
  margin-left: 5%;

  font-size: 5vw;
  color: green;
  font-weight: 300;
  /* border: 1px solid black; */
}

.spell_positions {
  /* position: absolute;
  top: 20vh; */

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;


}

.spell_letter_position {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin: 2vw;
  font-size: 12vw;
  color: crimson;
  font-weight: 200;
   
}

.alphabet_cards {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 100%;
  margin-bottom: 10vh;
  /* height: 30vh; */

}

.alphabet_card {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 13.5vw;
  height: 24vw;
  margin: 1vw;

  border-radius: 3vw;
  font-size: 10vw;
  color: white;
  font-weight: 200;
}

.card_unused {
  background-color: rgba(25, 25, 133, 0.9);
}

.card_used {
  color: rgba(135, 135, 139);
  background-color: rgba(135, 135, 139);
}

.left_questions_count {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  right: 0%;
  top: 0vh;
  /* width: 10vw; */
  height: 7vw;

  border-top-right-radius: 3vw;
  border-bottom-left-radius: 3vw;
  font-size: 5vw;
  padding: 1vw;
  color: rgb(236, 236, 236);
  font-weight: 100;
  background-color: rgba(113, 0, 243, 0.9);
}

.current_question_index {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  left: 0%;
  bottom: 0%;
  /* width: 10vw; */
  height: 5vw;

  border-top-right-radius: 3vw;
  border-bottom-left-radius: 3vw;
  font-size: 4vw;
  padding: 1vw;
  color: rgb(236, 236, 236);
  font-weight: 100;
  background-color: rgba(113, 0, 243, 0.9);  
}

.answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
  height: 15vh;
  margin-top: 3vh;
  border-radius: 3vw;
  padding: 3vw;

  background-color: rgba(100, 100, 100, 0.90);
}

.input_answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 80vw;
  height: 13vh;
  padding-left: 5vw;
  font-size: 10vw;
  font-weight: 900;
  color: white;
  /* border: 1px solid black; */
}

.input_answer_ph {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 80vw;
  height: 13vh;
  font-size: 10vw;
  font-weight: 100;
  color: darkgrey;
}

.buttons {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 90vw;
  height: 15vh;
  margin-top: 1vh;
  border-radius: 3vw;
  padding: 0vw;

  background-color: rgba(255, 200, 200, 0.6);
}

.buttons button {
  margin-left: 2vw;
  margin-right: 2vw;
}

.check-answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 35vw;
  height: 8vw;
  margin-left: 2vw;
  margin-right: 2vw;
  border-radius: 4vw;
  padding: 1.5vw;
  font-size: 5vw;

}

.right {
  color: green;
  background-color: rgba(161, 248, 212, 0.6);
}

.wrong {
  color: red;
  background-color: rgba(239, 245, 151, 0.6);
}

.btn_continue {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  z-index: 99;
  left: 25vw;
  top: 25vh;
  font-size: 10vh;
}

.true {
  display: flex;
}

.false {
  display: none;
}

.all_words_container {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 84vw;
  height: 30vh;
  margin-top: 3vh;
  padding: 3vw;
  border-radius: 3vw;
  background-color: rgba(200, 200, 255, 0.9);
}

.all_words {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  margin-top: 1vh;
  border-radius: 3vw;
  background-color: rgba(200, 200, 255, 0.9);
}

.word_card {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin: 1vw;
  color: white;
  font-size: 3vw;
  padding: 1vw;
  border-radius: 2vw;
  background-color: rgba(236, 119, 10, 0.9);
}

.left_card {
  background-color: rgba(236, 119, 10, 0.9);
}

.done_card {
  background-color: rgba(43, 167, 12, 0.9);
}