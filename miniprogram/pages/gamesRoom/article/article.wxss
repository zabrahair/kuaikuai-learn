@import '../../../css/questionPage.wxss';
.question{
  justify-content: flex-start;
  align-items: flex-start;
  width: 90vw;
  min-height: 60vh;
  max-height: 1000vh;
}

.title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: center;

  width: 70%;
  /* min-height: 10vw;
  max-height: 12vw; */
  margin-left: 0%;

  font-size: 5vw;
  color: rgb(255, 255, 255);
  text-shadow: 2px 2px rgba(96, 96, 96, 0.5);
  font-weight: 300;
}

.topic {
  font-size: 7vw;
}

.author {
  margin-left: 20vw;
  margin-top: 0vh;

}

.alphabet_cards {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  justify-self: center;
  box-sizing: content-box;
  width: 90vw;
  margin-top: 3vh;
  margin-bottom: 3vh;
}

.sentence {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: content-box;

  margin-left: 5vw;
  width: 85vw;
  margin-bottom: 3vw;
  /* min-height: 10vh; */
}

.punctuation {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 50vw;
  height: 24vw;
  margin: 1vw;

  border-radius: 3vw;
  font-size: 10vw;
  color: white;
  font-weight: 200;
}

.poem {
  justify-content: center;
}

.answer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
  height: 15vh;
  margin-top: 3vh;
  border-radius: 3vw;
  padding: 3vw;

  background-color: rgba(100, 100, 100, 0.90);
}

