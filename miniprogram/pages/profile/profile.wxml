<div class='container'>
  <div class='header'>
    <div class='avatar'
      style="background-image: url({{avatarUrl}})"
      >
      <button open-type="getUserInfo" 
      bindgetuserinfo="getUserInfo" 
      size="mini">{{authLogin}}</button>
    </div>
    <div class='my_score'>
      <div>{{userInfo.nickName}}</div>
      <div><text>积分</text><text>{{userInfo.score}}</text></div>
    </div>
  </div>
  <div class='content'>
    <div class='buttons'>
      <button class="" type='primary' bindtap='onClickRegister'>
        注册      
      </button>
    </div>
  </div>
</div>
