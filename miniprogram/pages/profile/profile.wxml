<div class='container'>
  <div class='header'>
    <div class='avatar'
      style="background-image: url({{avatarUrl}})"
      >
      <button open-type="getUserInfo" 
      bindgetuserinfo="getUserInfo" 
      size="mini">{{authLogin}}</button>
    </div>
    <div class='user_info'>
      <div class='username'>
        <text>昵称：</text>
        <text>{{userInfo.nickName}}</text>
      </div>
      <div class='my_score' >
        <text>积分：</text>
        <text>{{userInfo.score}}</text>
      </div>
    </div>
  </div>
  <div class='content'>
    <div class='buttons'>
      <button class="" type='warn' bindtap='onLogout'>
        注销
      </button>
    </div>
  </div>
</div>
