.container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
  height: 100vh;

  background-size: 100vw;
  background-image: url('http://media.pennlive.com/editorials/photo/9050480-large.jpg');
}

.header {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 40vh;
  background-color: rgba(100, 100, 100, 0.5);
}

.avatar {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 30vw;
  height: 30vw;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: lightskyblue;
  font-size: 7vw;
  color:  greenyellow;
}

.my_score {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;

  width: 50vw;
  height: 10vh;

  color: white;
  font-size: 8vw;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 70vh;
}

.buttons {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  padding: 5vw;
}

