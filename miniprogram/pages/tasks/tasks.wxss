@import '../../css/list.wxss';

.filter_picker,.last_filter,.filter_seperator{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  box-sizing: content-box;
  height: 7vh;
  margin-left: 0vw;
}

.filter_picker:after {
  margin-left:2vw;
  content: '▾';
  color: gainsboro;
}

.last_filter:after {
  margin-left:2vw;
  content: '▾';
  color: gainsboro;
}

.record .left {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 30vw;
  height: 100%;
}

.record .middle {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  padding-top: 3vw;
  padding-left: 2vw;
  width: 45vw;
  height: 100%;
}

.record .right {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 20vw;
  height: 100%
}

.task_content {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  height: 27vw;
  width: 27vw;
  padding: 1vw;
  margin: 2vw;
  overflow: hidden;
  white-space: wrap;
  text-overflow: ellipsis
}

.task_status {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  color: azure;
  font-size: 3vw;
  height: 20%;
  width: 100%;
}

.task_deadline {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  color: azure;
  font-size: 3vw;
  height: 20%;
  width: 95%;
}

.hurry_up {
  color: orange;
}

.time_over {
  color: red;
}

.task_action {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
}