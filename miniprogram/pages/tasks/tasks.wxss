.container {
  position: relative;
  width: 100vw;
}

.header {
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;

  top: 0vw;
  left: 0vh;
  width: 100vw;
  height: 14vh;
  opacity: 0.4;
  box-shadow: 0px 2px 2px 1px rgba(13, 24, 77, 0.822);
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;

  width: 70vw;
}

.footer {
  position: absolute;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  bottom: 0vw;
  left: 0vh;
  width: 100vw;  
  height: 14vh;
  opacity: 0.4;
  box-shadow: 0px -2px 2px 1px rgba(13, 24, 77, 0.822);
}
