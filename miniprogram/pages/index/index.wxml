<!--miniprogram/pages/index/index.wxml-->
<div class='container'>
  <div class='header'>
    <image class='avatar'
      src="{{userInfo.avatarUrl}}"
      >
      <button open-type="getUserInfo" 
      bindgetuserinfo="getUserInfo" 
      size="mini">{{authLogin}}</button>
    </image>
    <div class='user_info'>
      <div class='username'>
        <text>昵称：</text>
        <text>{{userInfo.nickName}}</text>
      </div>
      <div class='my_score' >
        <text>积分：</text>
        <text>{{userInfo.score}}</text>
      </div>
    </div>
  </div>
  <div class='content'>
    <div class='game_item' bindtap="onClickMathDivide">
      <text>九九除法联系</text>
      <text>>>></text>
    </div>
  </div>
</div>
