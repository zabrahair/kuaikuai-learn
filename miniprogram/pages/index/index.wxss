@import "../../css/common.wxss";

.container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 100vh;
}

.header {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;

  width: 100vw;
  height: 15vh;
  background-color: rgba(100, 100, 100, 0.5);
}

.avatar {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 15vw;
  height: 15vw;
  margin: 2vh;
  border-radius: 50%;
  background-size: cover;
  background-color: lightskyblue;

}

.avatar button{
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  top: 0vh;
  left: 0vw;
  width: 15vw;
  font-weight: 100;
  font-size: 3vw;
  color:  white;
}

.user_info {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: flex-start;

  width: 50vw;
  height: 10vh;

}

.username {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 30vw;
  height: 50%;
  margin-top: 4vw;

}

.username .caption{
  font-size: 3vw;
  color: white;
}

.username .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 4vw;
  color: white;
}

.my_score {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;

  width: 30vw;
  height: 6vh;
  margin-left: 0vw;
  margin-top: 2vw;

}

.my_score .caption{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 5vw;
  height: 5vw;
  margin: 0vw;
}

.my_score .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 
  align-self: flex-start;
  margin-left: 2vw;
  font-size: 4vw;
  color: white;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 90vh;
}

.items {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  min-height: 30vw;
  padding: 7vw;
}

.game_item {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;

  width: 27vw;
  height: 27vw;
  margin-top: 2vw;
  margin-right: 2vw;

  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: white;
  text-align: center;
  font-size: 4vw;
  padding: 1vw;
  border-radius: 3vw;
  opacity: 0.8;
  box-shadow: 2px 2px 2px 1px rgba(13, 24, 77, 0.822);
}

.goto_icon {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 8vw;
  height: 8vw;
}

.goto_icon_hover {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 5vw;
  height: 5vw;

}