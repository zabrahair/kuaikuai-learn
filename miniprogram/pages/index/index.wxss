.container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
  height: 100vh;

  background-size: 100vw;
  background-image: url('http://media.pennlive.com/editorials/photo/9050480-large.jpg');
}

.header {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 40vh;
  background-color: rgba(100, 100, 100, 0.5);
}

.avatar {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 30vw;
  height: 30vw;
  margin: 1vh;
  border-radius: 50%;
  background-size: cover;
  background-color: lightskyblue;

}

.avatar button{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  font-size: 5vw;
  color:  greenyellow;
}

.user_info {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;

  width: 50vw;
  height: 10vh;

}

.my_score {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;

  width: 50vw;
  height: 10vh;

  color: white;
  font-size: 4vw;
}

.username {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;

  width: 50vw;
  height: 10vh;

  color: white;
  font-size: 4vw;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 70vh;
}

.game_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 90vw;
  height: 10vh;
  margin-top: 2vh;
  background-color: rgba(200, 200, 220, 0.5);

  color: blue;
  font-size: 8vw;
  padding-left: 5vw;
  padding-right: 5vw;
}