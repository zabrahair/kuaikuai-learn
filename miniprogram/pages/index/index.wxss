.container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
  height: 100vh;

  background-size: 100vw 100vh;
  background-image: url('https://6b75-kuaikuai-fjpqg-1301178064.tcb.qcloud.la/kuai_background.jpg?sign=4c4590afa901625789b285cf1285cc4b&t=1580309905');
}

.header {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 40vh;
  background-color: rgba(100, 100, 100, 0.5);
}

.avatar {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 25vw;
  height: 25vw;
  margin: 1vh;
  border-radius: 50%;
  background-size: cover;
  background-color: lightskyblue;

}

.avatar button{
  position: absolute;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  top: 7.3vh;
  left: 0vw;
  width: 25vw;
  font-weight: 300;
  font-size: 5vw;
  color:  white;
}

.user_info {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;

  width: 50vw;
  height: 10vh;

}

.my_score {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 80vw;
  height: 6vh;
  margin-left: -5vw;
  margin-top: 3vh;

}

.my_score .caption{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  width: 8vw;
  height: 8vw;
  margin: 3vw;
}

.my_score .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 
  align-self: flex-start;

  font-size: 8vw;
  color: white;
}

.username {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;

  width: 90vw;
  height: 5vh;
  margin-top: 3vh;

}

.username .caption{
  font-size: 3vw;
  color: white;
}

.username .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  font-size: 5vw;
  color: white;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 70vh;
}

.game_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 85vw;
  height: 7vh;
  margin-left: 2vw;
  margin-top: 2vh;
  background-color: rgba(200, 200, 250, 0.5);

  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: peru;
  font-size: 5vw;
  padding-left: 5vw;
  padding-right: 5vw;
  border-radius: 3vw;
}

.goto_icon {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 5vw;
  height: 5vw;
}

.goto_icon_hover {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 5vw;
  height: 5vw;

}