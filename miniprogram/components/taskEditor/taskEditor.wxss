@import '../../css/common.wxss';

.component-container {
  position: fixed;
  z-index: 99;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;

  left: 0vw;
  top: 0vh;

  width: 100vw;
  height: 100vh;
  background-color: rgba(200, 200, 200, 0.4);
}

.component-content {
  /* position: absolute; */
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  justify-self: center;
  align-self: center;
  box-sizing: border-box;

  margin-top: 2vh;
  width: 90vw;
  height: 85vh;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 3vw;
}

.scroll-content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  justify-self: flex-start;
  align-self: center;
  box-sizing: content-box;

  width: 90vw;
  height: 80%;
  padding: 3%;
  color: black;
  font-size: 6vw;
  font-weight: 300;
}

.form {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 5vh;
  width: 90vw;
  min-height: 80%;
}

.form_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 87vw;
  margin-left: 1vw;
  margin-top: 1vh;
  min-height: 8vh;
  /* box-shadow: 0px 0px 3px 2px rgb(97, 96, 96); */
  font-size: 4vw;
  border-bottom: 1px dashed deepskyblue;
}

.task_content {

  align-items: center;
  width: 87vw;
  /* min-height: 10vh; */
}

.actions {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  justify-self: flex-end;

  width: 100%;
  height: 20%;
  border-bottom-left-radius: 3vw;
  border-bottom-right-radius: 3vw;
}

.button {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin-left: 5vw;
  margin-right: 5vw;
}


.close_button {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  
  margin: 3%;
  width: 10vw;
  height: 10vw;
}