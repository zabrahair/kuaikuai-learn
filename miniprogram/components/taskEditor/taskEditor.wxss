@import '../../css/common.wxss';
@import '../../css/dialog.wxss';
.component-content {
  /* position: absolute; */
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;

  margin-top: 2vh;
  width: 90vw;
  height: 85vh;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 3vw;
}

.scroll-content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: content-box;

  width: 90vw;
  height: 80%;
  padding: 3vw;
  color: black;
  font-size: 6vw;
  font-weight: 300;
}

.form {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  min-height: 80%;
}

.form_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  margin-top: 1vh;
  min-height: 8vh;
  /* box-shadow: 0px 0px 3px 2px rgb(97, 96, 96); */
  font-size: 4vw;
  border-bottom: 1px dashed deepskyblue;
}

.task_content {

  align-items: center;
  width: 100%;
  min-height: 20vh;
}

.actions {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  justify-self: flex-end;

  width: 100%;
  height: 20%;
  border-bottom-left-radius: 3vw;
  border-bottom-right-radius: 3vw;
}

.button {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin-left: 5vw;
  margin-right: 5vw;
}