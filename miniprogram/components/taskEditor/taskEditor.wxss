@import '../../css/common.wxss';
@import '../../css/dialog.wxss';
.component-content {
  /* position: absolute; */
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;

  margin-top: 2vh;
  width: 90vw;
  height: 85vh;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 3vw;
}

.scroll-content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: content-box;

  width: 90vw;
  height: 90%;
  padding: 3vw;
  color: black;
  font-size: 6vw;
  font-weight: 300;
}

.form {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  min-height: 80%;
}

.form_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  margin-top: 1vh;
  min-height: 8vh;
  /* box-shadow: 0px 0px 3px 2px rgb(97, 96, 96); */
  font-size: 4vw;
  border-bottom: 1px dashed deepskyblue;
}

.task_content {
  align-items: center;
  width: 100%;
  min-height: 20vh;
}

.finish_images{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;

  width: 90vw;
  min-height: 22vh;
}

.images_list_title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;

  width: 100vw;
  height: 6vh; 
  font-size: 4vw;

}

.add_image {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 19vw;
  height: 19vw;

  margin: 0.5vw;

  color: darkgrey;
  border: 1px solid darkgrey; 
  font-size: 10vw;
  position: relative; 
  background-size: cover;
  background-repeat: no-repeat;
}

.image_item {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 19vw;
  height: 19vw;

  margin: 0.5vw;
}

.actions {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  justify-self: flex-end;

  width: 100%;
  height: 20%;
  border-bottom-left-radius: 3vw;
  border-bottom-right-radius: 3vw;
}

.button {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin-left: 5vw;
  margin-right: 5vw;
}

.comments_area {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100%;
  min-height: 20vh;  
}

.bonus_icon {
  /* position: absolute; */
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  right: 0vw;
  bottom: 0vh;
  height: 5vw;
  width: 5vw;
}