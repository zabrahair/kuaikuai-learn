.component-container {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  width: 98vw;
  height: 7vh;
  background-color: rgba(100, 100, 100, 0.5);
  padding-left: 2vw;
  padding-right: 2vw;
}

.current_score{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center; 

  width: 25vw;
  height: 7vh;

}

.caption {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;  

  width: 15vw;
  height: 7vh;

}

.value {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;  

  width: 20vw;
  height: 7vh;
}

image.caption {
  -webkit-filter: drop-shadow(2px 2px 2px #222);
  filter: drop-shadow(2px 2px 2px #222);
}

.current_score .caption{
  width: 9vw;
  height: 7vw;
  margin-left: 1vw;
  margin-right: 2vw;

}

.current_score .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center; 

  font-size: 4vw;
  color: white;
}

.total_score {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 26vw;
  height: 7vh;

}

.total_score .caption{
  width: 10vw;
  height: 8vw;
  margin: 1vw;
}

.total_score .value{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center; 

  font-size: 4vw;
  color: white;
}

.current_timer {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width: 50vw;
  height: 7vh;
}

.current_timer .caption{
  font-size: 4vw;
  color: white;
}

.current_timer .value{
  font-size: 4vw;
  color: greenyellow;
  width: 100%;
}

