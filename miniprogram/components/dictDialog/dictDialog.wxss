@import '../../css/dialog.wxss';
.component-container{
  background-color: rgba(200, 200, 200, 0);
}
.component-content {
  /* position: absolute; */
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  justify-self: center;
  align-self: center;
  box-sizing: content-box;

  width: 90%;
  height: 70%;
  background-color: rgba(255, 255, 255, 0.9);
  border: 4px solid black;
  border-radius: 3%;

}

.scroll-content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  justify-self: center;
  align-self: center;
  box-sizing: content-box;

  width: 100%;
  min-height: 100%;
  padding: 3%;
  color: black;
  font-size: 6vw;
  font-weight: 300;
}

.play-sound {
  position: absolute;
  z-index: 99;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  width: 15vw;
  height: 15vw;
  -webkit-filter: drop-shadow(1px 1px 2px #222);
  filter: drop-shadow(1px 1px 2px #222);
}
