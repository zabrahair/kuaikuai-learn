<movable-area wx:if="{{isShown}}" class='component-container' direction="all">
  <scroll-view class='component-content' scroll-y="true" scroll-x="true">
    <rich-text class='scroll-content' nodes="{{meaning}}" bindtap="tap"/>
  </scroll-view>
  <movable-view direction='all' x='285' y='55'>
    <image class="play-sound" src="{{gConst.SOUND_ICON}}" bindtap="playCardText"/>
  </movable-view>
  <image src='../../images/close.png' class='close_button' bindtap="onClose"/>  
</movable-area>
