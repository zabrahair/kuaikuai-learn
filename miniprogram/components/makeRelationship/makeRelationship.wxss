@import '../../css/common.wxss';
@import '../../css/dialog.wxss';

.component-content {
  /* position: absolute; */
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;

  margin-top: 2vh;
  width: 90vw;
  min-height: 50vh;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 3vw;
}

.title {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box; 

  width: 100%;
  height: 10vh; 
  border-top-left-radius: 3vw;
  border-top-right-radius: 3vw;
}

.form_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;

  width: 95%;
  margin-top: 2vh;
  padding-left: 5vw;
  min-height: 8vh;
  /* box-shadow: 0px 0px 3px 2px rgb(97, 96, 96); */
  font-size: 4vw;
  /* border-bottom: 1px dashed deepskyblue; */
}

.capital {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;

  width: 25%;  
  height: 8vh;
  font-size: 4vw;
}

.input_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;

  width: 70%;  
  height: 8vh;
  font-size: 4vw;
  border: 1px solid gainsboro;
  border-radius: 3vw;
}

.picker_capital {
width: 20vw;  
height: 8vh;
}

.picker_input_item{
width: 70vw; 
height: 8vh; 
}

.actions {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  justify-self: flex-end;

  width: 100%;
  height: 10vh;
  border-bottom-left-radius: 3vw;
  border-bottom-right-radius: 3vw;
}

.button {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

  margin-left: 5vw;
  margin-right: 5vw;
}