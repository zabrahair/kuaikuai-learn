.comment_area {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: content-box;

  width: 100%;

  
}

.title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;

  width: 100%;
  height: 4vh; 
  font-size: 4vw;
}

.comment_input {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: content-box;

  width: 95%;
  min-height: 15vh;
  border: 1px solid darkgrey; 

}

.comment_item {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: content-box;

  width: 100%;
  padding-left: 2.5%;
  min-height: 2vh; 
  font-size: 4vw;
}

.comment_info {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: content-box;

  width: 100%;
}

.comment_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: content-box;

  width: 100%;

}