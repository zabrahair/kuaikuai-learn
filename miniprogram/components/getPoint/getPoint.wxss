.component-container {
  position: fixed;
  z-index: 99;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  left: 0vw;
  top: 0vh;

  width: 100vw;
  min-height: 100vh;
  /* background-color: rgba(120, 120, 120, 0.6); */
}

.component-content {
  position: absolute;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  justify-self: flex-start;
  box-sizing: content-box;

  /* left: 15%;
  top: 40%; */
}

.playHits {
  animation-name: playHits;
  animation-duration: 1.5s;
  animation-timing-function: ease;
  animation-iteration-count: 1;  
}

@keyframes playHits {
  0% {
    /* transform: rotateY(180deg); */
    transform: rotateY(0deg);
    opacity: 1;
    left: 15%;
    top: 40%;
  }

  10% {
    /* transform: rotateY(180deg); */
    transform: scale(0.9);
  }  

  50% {
    /* transform: rotateY(180deg); */
    transform: rotateY(180deg);
    opacity: 0.5;
  }

  60% {
    /* transform: rotateY(180deg); */
    transform: scale(0.6);
  }  

  90% {
    /* transform: rotateY(0deg); */
    transform: scale(0.1);
  }
  100% {
    left: 0%;
    top: 0%;        
    transform: rotateY(0deg);
    opacity: 0;
  }
}

.point-text {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  font-size: 20vw;
  font-weight: 600;
  color: white;
  text-shadow: 
   1px 2px 3px turquoise,    
   -1px -2px 3px turquoise,
	 2px 4px 6px yellow,   
   -2px -4px 6px yellow,  
	 4px 5px 9px orange,  
   -4px -5px 9px orange,   
	 6px 7px 12px red,   
   -6px -7px 12px red,  
	 0px 5px 15px rgba(0, 0, 0, .7);
}

.close_button {
  display: none;
  position: absolute;
  bottom: 5vh;
  width: 10vw;
  height: 10vw;
}